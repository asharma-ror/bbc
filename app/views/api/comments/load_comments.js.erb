Juvia.total_pages = <%= @chats.total_pages %>;
Juvia.next_page = 2;
if(Juvia.total_pages > 1){
  Juvia.$('#show_more_comments').show();
}

Juvia.comment_count = <%= @chat_count %>;
Juvia.last_comment_number = <%= @last_comment_number %>;

<% if (comments = @chats).size > 0 %>
  <% comments.reverse.each_with_index do |comment, index| %>
    <% 
      options = comment_hash(comment, @username, @user_email)
    %>
    <%= juvia_handle_load_chat(options) %>
  <% end %>
<% end %>
<%= juvia_reinstall_behavior %>

window.setInterval(function(){
  $("#chat-refresh").click();
}, 2000);

Juvia.userStatus();
window.setInterval(function(){
  Juvia.userStatus();
}, 180000);
